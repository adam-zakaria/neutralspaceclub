.elementToFadeInAndOut {
    animation: fadeinout 3s linear .5s infinite alternate 
}
     /*animation-name, animation-duration, animation-timing-function, animation-delay animation-iteration-count, animation-direction*/

@keyframes fadeinout {
    0%  { opacity: 1; }
    25% { opacity: .75; }
    50% { opacity: .5; }
    75% { opacity: .25; }
    100%{ opacity: 0; }
}



