html{
    height: 100%;
    font-size: 16px;
}

@media screen and (min-width: 320px) {
  html {
    font-size: calc(12px + 6 * ((100vw - 320px) / 680));
  }
}
@media screen and (min-width: 1600px) {
  html {
    font-size: 28px;
  }
}

